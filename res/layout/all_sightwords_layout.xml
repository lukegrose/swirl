<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <Button
        android:id="@+id/placeholder_button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="handleShowEditWord"
        android:text="Open Edit Word"
        />
    <TextView
        android:id="@+id/all_list_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Name:" />
    <EditText
        android:id="@+id/all_list_name_edit_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:hint="New List Name"/>    
    <TextView
        android:id="@+id/all_sightwords_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="words:" />        
    <ListView 
        android:id="@android:id/list" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
